<%= link_to('Back to List', categories_path, class: 'back-link') %>

<div class="model delete">
  <h2>Delete Category</h2>

  <%= form_for(@category, method: 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this post?</p>
    <p>Name: <%= @category.name %></p>
    <p>Number of Posts: <%= @category.posts.count %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Category", class: 'action delete') %>
    </div>

  <% end %>
</div>