<%= link_to('Back to List', posts_path, class: 'back-link') %>

<div class="model delete">
  <h2>Delete Post</h2>

  <%= form_for(@post, method: 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this post?</p>
    <p>Title: <%= @post.title %></p>
    <p>Body: <%= @post.body %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Post", class: 'action delete') %>
    </div>

  <% end %>
</div>